<!-- <İLETİŞİM SAYFASI> -->
<section id="contact" class="md-padding">
	<div class="container">

			<!-- <Page Title> -->
			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">İletişim</h2>
					</div>
				</div>
			</div>
			<!-- </Page Title> -->

		<div class="row">
			<div class="col-lg-12">
				{{#if sessionFlash.message}}
					<div class="{{sessionFlash.type}}">
						{{sessionFlash.message}}
					</div>
				{{/if}}
				<form method="POST" action="contact/email">
					<div class="row">
						<div class="col-md-6">

							<!-- <Contact Form Name> -->
							<div class="form-group">
								<input class="form-control" name="name" type="text" placeholder="Adınız *" required="required" data-validation-required-message="Please enter your name.">
								<p class="help-block text-danger"></p>
							</div>
							<!-- </Contact Form Name> -->

							<!-- <Contact Form E-mail> -->
							<div class="form-group">
								<input class="form-control" name="email" type="email" placeholder="E-mail *" required="required" data-validation-required-message="Please enter your email address.">
								<p class="help-block text-danger"></p>
							</div>
							<!-- </Contact Form E-mail> -->

							<!-- <Contact Form Phone> -->
							<div class="form-group">
								<input class="form-control" name="phone" type="tel" placeholder="Telefon Numaranız" data-validation-required-message="Please enter your phone number.">
								<p class="help-block text-danger"></p>
							</div>
							<!-- </Contact Form Phone> -->

						</div>

						<div class="col-md-6">

							<!-- <Contact Form Message> -->
							<div class="form-group">
								<textarea class="form-control" name="message" placeholder="Mesajınız *" required="required" data-validation-required-message="Please enter a message."></textarea>
								<p class="help-block text-danger"></p>
							</div>
							<!-- </Contact Form Message> -->

						</div>
						
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>